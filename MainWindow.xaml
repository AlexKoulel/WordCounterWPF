<Window x:Class="WordCounterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCounterWPF"
        mc:Ignorable="d"
        Title="WordCounterWPF" Height="350" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Height="30" Width="150" Content="Select File..." Name="SelectFileButton" Click="Select_File_Button_Click"/>
        <TextBlock Text="Number of words:" Grid.Row="1" TextAlignment="Center" FontSize="25" FontWeight="Bold"/>
        <TextBlock Text="-" Grid.Row="2" TextAlignment="Center" FontSize="25" FontWeight="Bold"  Name="WordsCountUI"/>
        <TextBlock Text="Number of characters:" Grid.Row="3" TextAlignment="Center" FontSize="25" FontWeight="Bold" />
        <TextBlock Text="-" Grid.Row="4" TextAlignment="Center" FontSize="25" FontWeight="Bold"  Name="CharactersCountUI"/>
    </Grid>
</Window>
